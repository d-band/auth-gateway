{
  "name": "auth-gateway",
  "version": "0.0.1",
  "description": "api gateway using nodejs",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "rm -rf lib && BABEL_ENV=production babel --out-dir=lib src",
    "test": "nyc ava",
    "report": "nyc report --reporter=html",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ],
    "ignore": "*.test.js",
    "env": {
      "development": {
        "sourceMaps": "inline"
      }
    }
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/d-band/auth-gateway.git"
  },
  "keywords": [
    "api",
    "gateway",
    "oauth2",
    "auth-center"
  ],
  "author": "d-band",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/d-band/auth-gateway/issues"
  },
  "homepage": "https://github.com/d-band/auth-gateway#readme",
  "devDependencies": {
    "ava": "^0.19.1",
    "babel-cli": "^6.8.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.8.0",
    "coveralls": "^2.11.9",
    "nyc": "^10.3.0"
  }
}